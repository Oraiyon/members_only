<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a post</title>
  </head>
  <body>
    <h1>Create a post</h1>
    <form action="" method="post">
      <label for="message">Message:</label>
      <textarea 
      name="message" 
      id="message" 
      cols="30" 
      rows="10"
      required><%= message === "" ? "" : message %></textarea>
      <button>Submit</button>
    </form>
    <% if (errors) { %>
      <% errors.forEach(err => { %>
        <p><%= err.msg %></p>
      <% }) %>
    <% } %>
  </body>
</html>
