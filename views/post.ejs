<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <title>Create a post</title>
  </head>
  <body>
    <a href="/">Home</a>
    <h1>Create a post</h1>
    <form action="" method="post">
      <div class="post-form">
        <label for="message">Message:</label>
        <textarea 
        name="message" 
        id="message" 
        cols="30" 
        rows="10"
        required><%= locals.message === "" ? "" : locals.message %></textarea>
        <button>Submit</button>
      </div>
    </form>
    <% if (locals.errors) { %>
      <% locals.errors.forEach(err => { %>
        <p><%= err.msg %></p>
      <% }) %>
    <% } %>
  </body>
</html>
